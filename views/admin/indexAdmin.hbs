<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <script src="/customScript/adminNavScript.js"></script>
    <script src="/customScript/adminIndexScript.js"></script>
    <link rel="stylesheet" href="/customStyle/adminIndexStyle.css">

</head>

<body>
    {{> adminHeader}}
    <div id="add" style="justify-self: center;">
        <form action="/manage/product" method="POST" name="adder" enctype="multipart/form-data">
            <H2 style="color: rgb(209, 44, 3);">Product Details</H2>
            <div class="form-row">
                <div class="col-md-3 mb-3">

                    <label for="validationServer013">Product Category</label>
                    <select name="cat" class="form-control">
                        <option value="Mobile">Mobile</option>
                        <option value="Laptop">Laptop</option>
                        <option value="iPad">iPad</option>
                        <option value="Others">Others</option>
                    </select>

                </div>
                <div class="col-md-3 mb-3">
                    <label for="validationServer023">Brand</label>
                    <select name="brand" class="form-control">
                        <option value="Apple">Apple</option>
                        <option value="Lenovo">Lenovo</option>
                        <option value="Vivo">Viv</option>
                        <option value="Redmi">Redmi</option>
                        <option value="Samsung">Samsung</option>
                        <option value="Others">Otherts</option>
                    </select>

                </div>
                <div class="col-md-3 mb-3">
                    <label for="validationServerUsername33">Model</label>
                    <div class="input-group">

                        <input type="text" name="model" class="form-control " id="validationServerUsername33"
                            placeholder="Model" aria-describedby="inputGroupPrepend33">
                    </div>
                </div>
            </div>

            <H2 style="color: rgb(209, 44, 3);">Memory Details</H2>
            <div class="form-row">
                <div class="col-md-3 mb-3">
                    <label for="validationServer013">RAM</label>
                    <input type="text" class="form-control" name="ram" id="validationServer013" placeholder="RAM">

                </div>
                <div class="col-md-3 mb-3">
                    <label for="validationServer023">ROM</label>
                    <input type="text" class="form-control" name="rom" id="validationServer023" placeholder="ROM">

                </div>
                <div class="col-md-3 mb-3">
                    <label for="validationServerUsername33">Expandable</label>
                    <div class="input-group">

                        <select name="expand" class="form-control">
                            <option value="64GB">64GB</option>
                            <option value="128GB">128GB</option>
                            <option value="256GB">256GB</option>
                            <option value="512GB">512GB</option>
                        </select>
                    </div>
                </div>
            </div>
            <H2 style="color: rgb(209, 44, 3);">Camera Details</H2>
            <div class="form-row">
                <div class="col-md-3 mb-3">
                    <label for="validationServer013">Rear Canera</label>
                    <input type="text" name="rear" class="form-control " id="validationServer013"
                        placeholder="Rear Canera">

                </div>
                <div class="col-md-3 mb-3">
                    <label for="validationServer023">Front Canera</label>
                    <input type="text" class="form-control" name="front" id="validationServer023"
                        placeholder="Front Canera">

                </div>

            </div>

            <H2 style="color: rgb(209, 44, 3);">Display Details</H2>
            <div class="form-row">
                <div class="col-md-3 mb-3">
                    <label for="validationServer013">Display Type</label>
                    <input type="text" class="form-control" name="disType" id="validationServer013"
                        placeholder="Display Type">

                </div>
                <div class="col-md-3 mb-3">
                    <label for="validationServer023">Display Size</label>
                    <input type="text" class="form-control " name="disSize" id="validationServer023"
                        placeholder="Display Size">

                </div>

            </div>
            <H2 style="color: rgb(209, 44, 3);">Battery Details</H2>
            <div class="form-row">
                <div class="col-md-3 mb-3">
                    <label for="validationServer013">Battery Type</label>
                    <input type="text" class="form-control" name="bType" id="validationServer013"
                        placeholder="Battery Type">

                </div>
                <div class="col-md-3 mb-3">
                    <label for="validationServer023">Battery capacity</label>
                    <input type="text" class="form-control " name="bCap" id="validationServer023"
                        placeholder="Battery capacity">

                </div>

            </div>
            <H2 style="color: rgb(209, 44, 3);">Available Color</H2>
            <div class="form-row">
                <div class="col-md-3 mb-3">
                    <label for="validationServer013">Color-1</label>
                    <input type="text" class="form-control " name="color1" id="validationServer013"
                        placeholder="Color-1">

                </div>
                <div class="col-md-3 mb-3">
                    <label for="validationServer023">Color-2</label>
                    <input type="text" class="form-control " name="color2" id="validationServer023"
                        placeholder="Color-2">

                </div>
                <div class="col-md-3 mb-3">
                    <label for="validationServerUsername33">Color-3</label>
                    <div class="input-group">

                        <input type="text" class="form-control " name="color3" id="validationServerUsername33"
                            placeholder="Color-3" aria-describedby="inputGroupPrepend33">
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <label for="validationServerUsername33">Color-4</label>
                    <div class="input-group">

                        <input type="text" class="form-control " name="color4" id="validationServerUsername33"
                            placeholder="Color-4" aria-describedby="inputGroupPrepend33">
                    </div>
                </div>
            </div>
            <H2 style="color: rgb(209, 44, 3);">Finger Print</H2>
            <div class="form-row">
                <div class="col-md-3 mb-3">
                    <label for="validationServer013">Available</label>
                    <select name="availFP" class="form-control">
                        <option value="NO">NO,Not Available</option>
                        <option value="YES">YES,Finger Print Available</option>
                    </select>

                </div>
                <div class="col-md-3 mb-3">
                    <label for="validationServer023">Position</label>
                    <select name="fpPosition" class="form-control">
                        <option value="Front">Front</option>
                        <option value="Rear">Rear</option>
                    </select>


                </div>
                <div class="col-md-3 mb-3">
                    <label for="validationServerUsername33">On Screen</label>
                    <select name="fpOnScreen" class="form-control">
                        <option value="NO">NO,Not On Screen</option>
                        <option value="YES">YES,On Screen Finger Print </option>
                    </select>
                </div>
            </div>

            <H2 style="color: rgb(209, 44, 3);">Images</H2>
            <div class="form-row">
                <div class="col-md-3 mb-3">
                    <label for="validationServer013">please select Multiple images at a time</label>
                    <input type="file" name="images" multiple="multiple" class="form-control " id="validationServer013"
                        accept="image/*" placeholder="Product Category">

                </div>

            </div>
            <H2 style="color: rgb(209, 44, 3);">Processor Details</H2>
            <div class="form-row">
                <div class="col-md-3 mb-3">
                    <label for="validationServer013">Processor</label>
                    <input type="text" class="form-control " id="validationServer013" placeholder="Product Category">

                </div>

            </div>



            <div class="form-group">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input is-invalid" id="invalidCheck33">
                    <label class="custom-control-label" for="invalidCheck33">Yes,I have verified all details are
                        correct</label>
                    <div class="invalid-feedback">
                        You must agree before submitting.
                    </div>
                </div>
                <div class="invalid-feedback">
                    You must agree before submitting.
                </div>
            </div>
            <button class="btn btn-primary" type="submit">Submit form</button>
        </form>
    </div>
    <div id="update" style="display: none;">
        <form action="">
            <h1>update Product</h1>
        </form>
    </div>
    <div id="delete" style="display: none;">
        <form action="">
            <h1>Delete Product</h1>
        </form>
    </div>
</body>

</html>