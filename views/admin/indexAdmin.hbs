<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <script src="/customScript/adminNavScript.js"></script>
    <script src="/customScript/adminIndexScript.js"></script>
    <link rel="stylesheet" href="/customStyle/adminIndexStyle.css">
</head>

<body>
    {{> adminHeader}}

